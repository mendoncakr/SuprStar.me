<body class="show">
  <div class=background>
    <div id="container">
      <div id="left_side">
        <div id="joinText">
          <% if current_party %>
          <span>
            <h2 style="color:red">Want to join?</h2>
            <h2 class="info_bar"> Text: <strong><%= @party.hash_tag%></strong> to <strong>1.845.443.4529</strong></h2>
            <h3>(eg: <%= @party.hash_tag%>, John Quigley, Michael Jackson Beat It) </h3>
          </span>
          <% end %>
        </div>
        <div class="videoContainer">
          <div id="videoPlayer"></div>
          <div id="videoButtons">
            <button class="button" id="play">Play</button>
            <button class="button" id="pause">Pause</button>
            <button class="button" id="next">Next!</button>
          </div><br>
          <div>
            <meter id="booMeter" value="50" min="0" max="100"></meter>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="right_side">
    <div id="songlist">
      <h2>Songlist</h2>
      <ul class="queue">
        <li class="marquee" id="#{@first_song['id']"><%= @first_song["name"] %></li>
      </ul>
    </div>
    <div id="comments">
      <h2>Comments</h2>
      <ul class="comment">
        <% if @comments.size > 0 %>
        <% @comments.each do |comment| %>
        <li  data-time="<%= comment.created_at.to_i%>">
          <%= comment.user.name %> says <%= comment.content %></li>
          <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
</body>

